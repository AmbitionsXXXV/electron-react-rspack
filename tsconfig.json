{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,

    "isolatedModules": true,
    "incremental": true,

    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@renderer/*": ["./src/renderer/*"]
    },
    "types": ["@types/wicg-file-system-access"]
  },
  "exclude": ["node_modules", "dist", "config", ".rspack"],
  "include": ["src/**/*"]
}
